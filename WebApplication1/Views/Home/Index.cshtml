@model WebApplication1.Models.ProductVM

<div class="text-center">
    <table>
        <tr>
            <td>
                <h3>Product id</h3>
            </td>
            <td>
                <h3>Product name</h3>
            </td>
            <td>
                <h3>Product price</h3>
            </td>
        </tr>
        <form method="post">
            @for(int i = 0; i < Model.Products.Count; i++)
            {
                <tr>
                    <td>
                        <input asp-for="@Model.Products[i].Id" name="Products[@i].Id" />
                    </td>
                    <td>
                        <input asp-for="@Model.Products[i].Name" name="Products[@i].Name" />
                    </td>
                    <td>
                        <input asp-for="@Model.Products[i].UnitPrice" name="Products[@i].UnitPrice" />
                    </td>
                </tr>
            }
            <tr>
            <td><input type="submit" value="Submit" /></td>
            </tr>
        </form>
    </table>
</div>
